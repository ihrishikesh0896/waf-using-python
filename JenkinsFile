pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your Git repository
                sh 'echo here'
                git branch: 'master', credentialsId: '82ad800c-aa69-4d87-8014-6f1a42710831', url: 'https://github.com/ihrishikesh0896/waf-using-python.git'
                git 'https://github.com/ihrishikesh0896/waf-using-python.git'
            }
        }

        stage('Build') {
            steps {
                sh '''#!/bin/bash  
                python3 -m venv myenv
                source myenv/bin/activate
                pip3 install -r requirements.txt
                echo "installed requirements"
                which python3
                '''
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your application (e.g., to a web server)
                // Replace with your deployment commands
                sh '/var/lib/jenkins/workspace/ZAP/myenv/bin/python3 app.py'
            }
        }
    }

    post {
        success {
            // Notify on success (e.g., via email or messaging)
            echo 'Pipeline succeeded!'
        }
        failure {
            // Notify on failure and take corrective actions
            echo 'Pipeline failed!'
        }
    }
}

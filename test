pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your Git repository
                git 'https://github.com/ihrishikesh0896/waf-using-python.git'
            }
        }

        stage('Build') {
            steps {
                // Set up a virtual environment for Python
                sh 'python -m venv venv'
                sh 'source venv/bin/activate'

                // Install Python dependencies
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Security Test') {
            steps {
                // Run OWASP ZAP for security testing
                sh 'zap-cli -cmd your-zap-scan-command'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy your Python application (e.g., to a web server)
                // Replace with your deployment commands
                sh 'python deploy.py'
            }
        }
    }

    post {
        success {
            // Notify on success (e.g., via email or messaging)
            echo 'Pipeline succeeded!'
        }
        failure {
            // Notify on failure and take corrective actions
            echo 'Pipeline failed!'
        }
    }
}
